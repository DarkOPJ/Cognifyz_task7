<a href="/dashboard" class="hover:underline">&lArr; Back to Dashboard</a>

<div class="mt-3 flex justify-between items-center gap-4">
  <h2>Edit - <%= post.title %></h2>

  <button
    class="min-w-fit text-red-500 hover:text-red-700 cursor-pointer openDialog"
    data-post-id="<%= post._id %>"
    data-post-title="<%= post.title %>"
  >
    Delete Post
  </button>
</div>

<form
  id="blogForm"
  action="/edit-post/<%= post._id %>?_method=PUT"
  method="POST"
>
  <div class="w-full mt-3">
    <label for="title" class="font-bold">Title</label>
    <input
      type="text"
      class="border border-mygray"
      placeholder="eg. NodeJs Essentials"
      id="title"
      name="title"
      value="<%= post.title %>"
      required
    />
  </div>

  <div class="w-full mt-10">
    <label for="content" class="font-bold">Post</label>
    <textarea id="content" name="content"><%= post.body %></textarea>
  </div>

  <div class="w-full mt-10 flex justify-center items-end">
    <input
      type="submit"
      class="text-white bg-black cursor-pointer"
      value="Update Post"
    />
  </div>
</form>
